{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "constants/*": ["src/constants/*"],
      "helpers/*": ["src/helpers/*"],
      "lib/*": ["src/lib/*"],
      "middlewares/*": ["src/middlewares/*"],
      "modules/*": ["src/modules/*"],
      "strategies/*": ["src/strategies/*"],
      "config": ["src/config.ts"]
    }
  },
  "ts-node-dev": {
      "require": ["tsconfig-paths/register"]
  },
  "exclude": [
      "node_modules",
      "**/dist/*"
  ],
}